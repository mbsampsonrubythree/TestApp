<div class="article_content">
  <h1>Test App Articles</h1>
  <div class="notice_area">
    <p id="notice"><%= notice %></p>
  </div>

  <% @articles.each do |article| %>
    <div class="article_item">
      <h2><%= link_to article.title, article_show_path(article.id) %></h2>
      <br>
      <p><%= article.body %>
      <br><br>
      <p><strong>Category:</strong> <%= article.category %></p>
      <p><strong>Status:</strong> <%= link_to article.status, toggle_status_article_path(article.id) %></p>
    </div>
  <% end %>
</div>
